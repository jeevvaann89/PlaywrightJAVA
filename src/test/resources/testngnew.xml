<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >


<suite name="SauceDemo Automation Suite" verbose="1" parallel="classes" thread-count="2" configfailurepolicy="continue">

    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>

    <test name="Login Functionality Tests - Chromium">
        <parameter name="browser" value="chromium"/>
        <parameter name="environment" value="dev"/>
        <groups>
            <run>
                <include name="smoke"/>
                <include name="sanity"/>
            </run>
        </groups>
